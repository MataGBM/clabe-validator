{
   "name": "clabe-validator",
   "version": "1.7.0",
   "description": "Analyze or create a CLABE number for a Mexican bank account (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/clabe.js",
   "jsdelivr": "dist/clabe.min.js",
   "main": "dist/clabe.umd.cjs",
   "types": "dist/clabe.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/clabe.js",
         "require": "./dist/clabe.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/clabe-validator",
   "homepage": "https://github.com/center-key/clabe-validator",
   "bugs": "https://github.com/center-key/clabe-validator/issues",
   "docs": "https://centerkey.com/clabe",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "bank-account",
      "bank",
      "clabe-number",
      "clabe-validator",
      "clabe",
      "financial",
      "javascript",
      "mexico",
      "typescript",
      "validator"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude node_modules,build,dist",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:04": "tsc",
      "step:05": "tsc --module UMD --outDir build/umd",
      "step:06": "gulp make-dist",
      "step:07": "w3c-html-validator",
      "step:08": "mocha spec/*.spec.js",
      "test": "npm-run-all step:*"
   },
   "dependencies": {},
   "devDependencies": {
      "@babel/core": "~7.15",
      "@babel/preset-env": "~7.15",
      "@fortawesome/fontawesome-free": "~5.15",
      "@types/node": "~16.7",
      "@typescript-eslint/eslint-plugin": "~4.29",
      "@typescript-eslint/parser": "~4.29",
      "assert-deep-strict-equal": "~0.0",
      "babel-minify": "~0.5",
      "dna.js": "~1.9",
      "eslint": "~7.32",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-babel": "~8.0",
      "gulp-header": "~2.0",
      "gulp-rename": "~2.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "jquery": "~3.6",
      "jsdom": "~17.0",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~9.1",
      "npm-run-all2": "~5.0",
      "pretty-print-json": "~1.1",
      "rimraf": "~3.0",
      "typescript": "~4.4",
      "w3c-html-validator": "~0.7",
      "web-ignition": "~1.4"
   }
}
